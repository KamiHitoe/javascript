{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "files": [
        "*.ts"
    ],
    "include": [
        "*"
    ],
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts"
    ]
}